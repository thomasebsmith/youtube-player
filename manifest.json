{
  "manifest_version": 2,
  "name": "YouTube Player",
  "author": "Thomas Smith",
  "version": "0.2",
  "description": "Allows playing YouTube playlists without logging in",
  "homepage_url": "https://github.com/thomasebsmith/yt-player",
  "browser_specific_settings": {
    "gecko": {
      "id": "ytPlayer@thomasebsmith.github.io",
      "strict_min_version": "55.0"
    }
  },
  "icons": {
    "48": "icons/48.png"
  },
  "permissions": [
    "https://www.youtube.com/*",
    "menus",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "util/general.js",
      "util/storage.js",
      "util/video.js",
      "util/playlist.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["util/video.js", "util/playlist.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "YouTube Player",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
